<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:textAlignment="center"
        android:textSize="0sp"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="TextView"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:insetTop="0dp"
            android:insetBottom="6dp"
            android:text="@string/salary"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded,TouchTargetSizeCheck,VisualLintButtonSize" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="center|center_vertical"
            android:hint="введите цену за час"
            android:inputType="number"
            android:textSize="17dp"
            tools:ignore="HardcodedText,SpUsage,TouchTargetSizeCheck,TextSizeCheck,VisualLintTextFieldSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/year_month"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:orientation="horizontal">

        <Button
            android:id="@+id/previous_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="35dp"
            android:paddingTop="0dp"
            android:paddingEnd="1dp"
            android:paddingBottom="0dp"
            android:text="&lt;"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck,HardcodedText,OnClick" />

        <Button
            android:id="@+id/month"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="1dp"
            android:paddingTop="0dp"
            android:paddingEnd="1dp"
            android:paddingBottom="0dp"
            android:text="февраль"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,HardcodedText,OnClick,TextSizeCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="&gt;"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck,HardcodedText,OnClick,RtlSymmetry" />

        <Button
            android:id="@+id/previous_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="35dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:text="&lt;"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,HardcodedText,OnClick" />

        <Button
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="1dp"
            android:paddingBottom="0dp"
            android:text="2025"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/next_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="1dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="&gt;"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,HardcodedText,OnClick,RtlSymmetry" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/number"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessLeaf">

                <TextView
                    android:id="@+id/num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="№"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/data"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="UselessLeaf">

                <TextView
                    android:id="@+id/mon_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="дата"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UselessLeaf">

                <TextView
                    android:id="@+id/hou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="часы"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="UselessLeaf">

                <TextView
                    android:id="@+id/sala"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="з/п"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
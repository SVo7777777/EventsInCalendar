<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:textAlignment="center"
        android:textSize="0sp"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="TextView"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="6dp"
            android:text="@string/salary"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="center|center_vertical"
            android:hint="введите цену за час"
            android:inputType="number"
            android:textSize="17dp"
            tools:ignore="HardcodedText,SpUsage,TouchTargetSizeCheck,TextSizeCheck,VisualLintTextFieldSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/year_month"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:orientation="horizontal">

        <Button
            android:id="@+id/previous_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="35dp"
            android:paddingTop="0dp"
            android:paddingEnd="1dp"
            android:paddingBottom="0dp"
            android:text="&lt;"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck,HardcodedText,OnClick" />

        <Button
            android:id="@+id/month"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="1dp"
            android:paddingTop="0dp"
            android:paddingEnd="1dp"
            android:paddingBottom="0dp"
            android:text="февраль"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,HardcodedText,OnClick,TextSizeCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="&gt;"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck,HardcodedText,OnClick,RtlSymmetry" />

        <Button
            android:id="@+id/previous_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="35dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:text="&lt;"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,HardcodedText,OnClick" />

        <Button
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="1dp"
            android:paddingBottom="0dp"
            android:text="2025"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/next_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:paddingStart="1dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="&gt;"
            app:cornerRadius="0dp"
            tools:ignore="ButtonStyle,HardcodedText,OnClick,RtlSymmetry" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/hours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment,ScrollViewSize">

                <LinearLayout
                    android:id="@+id/list"
                    android:layout_width="349dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="UselessLeaf,TextSizeCheck">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hours"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/work_day"
                        android:gravity="center"
                        android:text="@string/my_hours"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/plan1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/work_day"
                        android:gravity="center"
                        android:text="@string/my_hours1"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/plan2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/work_day"
                        android:gravity="center"
                        android:text="@string/my_hours2"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="SpeakableTextPresentCheck">

                    <LinearLayout
                        android:id="@+id/days"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="ObsoleteLayoutParam,UselessLeaf">

                        <LinearLayout
                            android:id="@+id/days_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:ignore="InefficientWeight,NestedWeights">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_hours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/RosyBrown"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/days_month1"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:orientation="horizontal"
                            tools:ignore="InefficientWeight,NestedWeights">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_hours1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/RosyBrown"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/days_month2"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:orientation="horizontal"
                            tools:ignore="InefficientWeight,NestedWeights">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_hours2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/RosyBrown"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/results"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:text="Итог"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText,NestedWeights" />

                    <TextView
                        android:id="@+id/result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/work_day"
                        android:gravity="center"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="6dp" />

                    <TextView
                        android:id="@+id/result1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/work_day"
                        android:gravity="center"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="6dp" />

                    <TextView
                        android:id="@+id/result2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/work_day"
                        android:gravity="center"
                        android:textColor="@color/red" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                tools:ignore="UselessLeaf">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>